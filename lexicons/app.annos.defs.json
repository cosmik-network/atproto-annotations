{
  "lexicon": 1,
  "id": "app.annos.defs",
  "description": "Common definitions for annotation fields and types",
  "defs": {
    "annotationField": {
      "type": "object",
      "description": "Base definition for an annotation field",
      "required": ["name", "description"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the annotation field"
        },
        "description": {
          "type": "string",
          "description": "Description of the annotation field"
        },
        "createdAt": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp when this field was created"
        }
      }
    },
    "annotation": {
      "type": "object",
      "description": "Base definition for an annotation",
      "required": ["url", "field", "value"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "The primary URL identifying the annotated resource."
        },
        "additionalIdentifiers": {
          "type": "array",
          "items": {
            "type": "ref",
            "ref": "#identifier"
          },
          "description": "Optional additional identifiers for the resource."
        },
        "field": {
          "type": "ref",
          "ref": "app.annos.defs#fieldRef"
        },
        "value": {
          "type": "unknown",
          "description": "The value of the annotation, type depends on the field type"
        },
        "fromTemplate": {
          "type": "ref",
          "ref": "app.annos.defs#templateRef"
        },
        "createdAt": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp when this annotation was created"
        },
        "updatedAt": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp when this annotation was last updated"
        }
      }
    },
    "identifier": {
      "type": "object",
      "description": "Represents an identifier with a type and value.",
      "required": ["type", "value"],
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of identifier (e.g., 'doi', 'at-uri', 'isbn')."
        },
        "value": {
          "type": "string",
          "description": "The identifier value."
        }
      }
    },
    "fieldRef": {
      "type": "object",
      "description": "Reference to an annotation field",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Identifier for the annotation field"
        }
      }
    },
    "templateRef": {
      "type": "object",
      "description": "Reference to an annotation template",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Identifier for the annotation template"
        }
      }
    }
  }
}
