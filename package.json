{
  "name": "annos",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest src/modules/user/tests/e2e/OAuthSignInFlow.test.ts --testTimeout=300000",
    "build": "tsup",
    "build:watch": "tsc --watch",
    "dev": "dotenv -e .env.local -- concurrently -k -n TYPE,CODE -c red,blue \"tsc --noEmit --watch\" \"tsup --watch --onSuccess='node dist/index.js'\"",
    "migrate": "node dist/scripts/migrate.js",
    "lexgen": "lex gen-server ./src/modules/atproto/infrastructure/lexicon ./src/modules/atproto/infrastructure/lexicons/*",
    "db:start": "docker run --name annos-postgres -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=annotations -p 5432:5432 -d postgres:14",
    "db:stop": "docker stop annos-postgres",
    "db:remove": "docker rm annos-postgres",
    "db:generate": "drizzle-kit generate --schema=./src/modules/**/*.sql.ts --out=./src/shared/infrastructure/database/migrations --dialect=postgresql",
    "webapp:dev": "cd src/webapp && npm run dev",
    "webapp:build": "cd src/webapp && npm run build",
    "webapp:start": "cd src/webapp && npm run start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@atproto/api": "^0.15.2",
    "@atproto/common": "^0.4.10",
    "@atproto/identity": "^0.4.7",
    "@atproto/lexicon": "^0.4.10",
    "@atproto/oauth-client-node": "^0.2.15",
    "@atproto/sync": "^0.1.20",
    "@atproto/syntax": "^0.4.0",
    "@atproto/xrpc-server": "^0.7.15",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.8.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@testcontainers/postgresql": "^10.24.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pg": "^8.11.13",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.1.2",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "jest": "^29.7.0",
    "pg": "^8.14.1",
    "playwright": "^1.40.0",
    "supertest": "^7.1.0",
    "testcontainers": "^10.24.2",
    "ts-jest": "^29.3.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  }
}
