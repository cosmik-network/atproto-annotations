{
  "lexicon": 1,
  "id": "app.annos.dyad.field",
  "description": "Record definition for dyad annotation fields",
  "defs": {
    "main": {
      "type": "record",
      "description": "A record defining a dyad annotation field",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["base", "sideA", "sideB"],
        "properties": {
          "base": {
            "type": "ref",
            "ref": "app.annos.defs#fieldBase"
          },
          "sideA": {
            "type": "string",
            "description": "Label for side A of the dyad"
          },
          "sideB": {
            "type": "string",
            "description": "Label for side B of the dyad"
          }
        }
      }
    }
  }
}
