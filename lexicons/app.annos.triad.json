{
  "lexicon": 1,
  "id": "app.annos.triad",
  "description": "Triad annotation types for representing relationships between three vertices",
  "defs": {
    "triadAnnotation": {
      "type": "object",
      "description": "An annotation representing a relationship between three vertices",
      "required": ["base", "value"],
      "properties": {
        "base": {
            "type": "ref",
            "ref": "app.annos.defs#annotationBase"
        },
        "value": {
          "type": "object",
          "required": ["vertexA", "vertexB", "vertexC"],
          "properties": {
            "vertexA": {
              "type": "integer",
              "description": "Value for vertex A"
            },
            "vertexB": {
              "type": "integer",
              "description": "Value for vertex B"
            },
            "vertexC": {
              "type": "integer",
              "description": "Value for vertex C"
            },
            "sumsTo": {
              "type": "integer",
              "const": 1,
              "description": "The sum of all vertex values"
            }
          }
        }
      }
    },
    "main": {
      "type": "record",
      "description": "A record of a triad annotation",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["base", "value"],
        "properties": {
          "base": {
            "type": "ref",
            "ref": "app.annos.defs#annotationBase"
          },
          "value": {
            "type": "object",
            "required": ["vertexA", "vertexB", "vertexC"],
            "properties": {
              "vertexA": {
                "type": "integer",
                "description": "Value for vertex A"
              },
              "vertexB": {
                "type": "integer",
                "description": "Value for vertex B"
              },
              "vertexC": {
                "type": "integer",
                "description": "Value for vertex C"
              },
              "sumsTo": {
                "type": "integer",
                "const": 1,
                "description": "The sum of all vertex values"
              }
            }
          }
        }
      }
    }
  }
}
