{
  "lexicon": 1,
  "id": "app.annos.annotation",
  "description": "A single record type for all annotations.",
  "defs": {
    "main": {
      "type": "record",
      "description": "A record representing an annotation on a resource.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["base", "value"],
        "properties": {
            "base": {
                "type": "ref",
                "ref": "app.annos.defs#annotationBase"
            },
            "value": {
                "type": "union",
                "description": "The specific value of the annotation, determined by the field type.",
                "refs": [
                    "app.annos.defs#dyadValue",
                    "app.annos.defs#triadValue",
                    "app.annos.defs#ratingValue",
                    "app.annos.defs#singleSelectValue",
                    "app.annos.defs#multiSelectValue"
                ]
            }
        }
      }
    },
    "createAnnotation": {
      "type": "procedure",
      "description": "Create a new annotation",
      "input": {
        "encoding": "application/json",
        "schema": {
            "type": "ref",
            "ref": "#main" // Input is the annotation record itself
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["uri"],
          "properties": {
            "uri": {
              "type": "string",
              "format": "at-uri",
              "description": "AT-URI of the created annotation"
            }
          }
        }
      }
    },
    "getAnnotation": {
      "type": "query",
      "description": "Get an annotation by URI",
      "parameters": {
        "type": "params",
        "required": ["uri"],
        "properties": {
          "uri": {
            "type": "string",
            "format": "at-uri",
            "description": "AT-URI of the annotation"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
            "type": "ref",
            "ref": "#main" // Output is the annotation record itself
        }
      }
    }
  }
}
