{
  "lexicon": 1,
  "id": "app.annos.dyad",
  "description": "Dyad annotation types for representing relationships between two sides",
  "defs": {
    "dyadAnnotation": {
      "type": "object",
      "description": "An annotation representing a relationship between two sides",
      "required": ["base", "value"],
      "properties": {
        "base": {
            "type": "ref",
            "ref": "app.annos.defs#annotationBase"
        },
        "value": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": {
              "type": "integer",
              "description": "Value representing the relationship between sides"
            },
            "minValue": {
              "type": "integer",
              "const": 0,
              "description": "Minimum possible value"
            },
            "maxValue": {
              "type": "integer",
              "const": 1,
              "description": "Maximum possible value"
            }
          }
        }
      }
    },
    "main": {
      "type": "record",
      "description": "A record of a dyad annotation",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["base", "value"],
        "properties": {
          "base": {
            "type": "ref",
            "ref": "app.annos.defs#annotationBase"
          },
          "value": {
            "type": "object",
            "required": ["value"],
            "properties": {
              "value": {
                "type": "integer",
                "description": "Value representing the relationship between sides"
              },
              "minValue": {
                "type": "integer",
                "const": 0,
                "description": "Minimum possible value"
              },
              "maxValue": {
                "type": "integer",
                "const": 1,
                "description": "Maximum possible value"
              }
            }
          }
        }
      }
    }
  }
}
