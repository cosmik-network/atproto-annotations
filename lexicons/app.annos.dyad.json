{
  "lexicon": 1,
  "id": "app.annos.dyad",
  "description": "Dyad annotation types for representing relationships between two sides",
  "defs": {
    "dyadAnnotation": {
      "type": "object",
      "description": "An annotation representing a relationship between two sides",
      "required": ["url", "field", "value"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "The primary URL identifying the annotated resource."
        },
        "additionalIdentifiers": {
          "type": "array",
          "items": {
            "type": "ref",
            "ref": "app.annos.defs#identifier"
          },
          "description": "Optional additional identifiers for the resource."
        },
        "field": {
          "type": "ref",
          "description": "A strong reference to the dyad field record being used.",
          "ref": "com.atproto.repo.strongRef"
        },
        "value": {
          "type": "object",
          "required": ["value"],
          "properties": {
            "value": {
              "type": "integer",
              "description": "Value representing the relationship between sides"
            },
            "minValue": {
              "type": "integer",
              "const": 0,
              "description": "Minimum possible value"
            },
            "maxValue": {
              "type": "integer",
              "const": 1,
              "description": "Maximum possible value"
            }
          }
        },
        "fromTemplate": {
          "type": "ref",
          "ref": "com.atproto.repo.strongRef"
        },
        "createdAt": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp when this annotation was created"
        },
        "updatedAt": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp when this annotation was last updated"
        }
      }
    },
    "main": {
      "type": "record",
      "description": "A record of a dyad annotation",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["url", "field", "value"],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "The primary URL identifying the annotated resource."
          },
          "additionalIdentifiers": {
            "type": "array",
            "items": {
              "type": "ref",
              "ref": "app.annos.defs#identifier"
            },
            "description": "Optional additional identifiers for the resource."
          },
          "field": {
            "type": "ref",
            "description": "A strong reference to the dyad field record being used.",
            "ref": "com.atproto.repo.strongRef"
          },
          "value": {
            "type": "object",
            "required": ["value"],
            "properties": {
              "value": {
                "type": "integer",
                "description": "Value representing the relationship between sides"
              },
              "minValue": {
                "type": "integer",
                "const": 0,
                "description": "Minimum possible value"
              },
              "maxValue": {
                "type": "integer",
                "const": 1,
                "description": "Maximum possible value"
              }
            }
          },
          "fromTemplate": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when this annotation was created"
          },
          "updatedAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when this annotation was last updated"
          }
        }
      }
    }
  }
}
