{
  "lexicon": 1,
  "id": "app.annos.triad",
  "description": "Triad annotation types for representing relationships between three vertices",
  "defs": {
    "triadAnnotation": {
      "type": "object",
      "description": "An annotation representing a relationship between three vertices",
      "required": ["url", "field", "value"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "The primary URL identifying the annotated resource."
        },
        "additionalIdentifiers": {
          "type": "array",
          "items": {
            "type": "ref",
            "ref": "app.annos.defs#identifier"
          },
          "description": "Optional additional identifiers for the resource."
        },
        "field": {
          "type": "ref",
          "description": "A strong reference to the triad field record being used.",
          "ref": "com.atproto.repo.strongRef"
        },
        "value": {
          "type": "object",
          "required": ["vertexA", "vertexB", "vertexC"],
          "properties": {
            "vertexA": {
              "type": "integer",
              "description": "Value for vertex A"
            },
            "vertexB": {
              "type": "integer",
              "description": "Value for vertex B"
            },
            "vertexC": {
              "type": "integer",
              "description": "Value for vertex C"
            },
            "sumsTo": {
              "type": "integer",
              "const": 1,
              "description": "The sum of all vertex values"
            }
          }
        },
        "fromTemplate": {
          "type": "ref",
          "ref": "app.annos.defs#templateRef"
        },
        "createdAt": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp when this annotation was created"
        },
        "updatedAt": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp when this annotation was last updated"
        }
      }
    },
    "main": {
      "type": "record",
      "description": "A record of a triad annotation",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["url", "field", "value"],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "The primary URL identifying the annotated resource."
          },
          "additionalIdentifiers": {
            "type": "array",
            "items": {
              "type": "ref",
              "ref": "app.annos.defs#identifier"
            },
            "description": "Optional additional identifiers for the resource."
          },
          "field": {
            "type": "ref",
            "description": "A strong reference to the triad field record being used.",
            "ref": "com.atproto.repo.strongRef"
          },
          "value": {
            "type": "object",
            "required": ["vertexA", "vertexB", "vertexC"],
            "properties": {
              "vertexA": {
                "type": "integer",
                "description": "Value for vertex A"
              },
              "vertexB": {
                "type": "integer",
                "description": "Value for vertex B"
              },
              "vertexC": {
                "type": "integer",
                "description": "Value for vertex C"
              },
              "sumsTo": {
                "type": "integer",
                "const": 1,
                "description": "The sum of all vertex values"
              }
            }
          },
          "fromTemplate": {
            "type": "ref",
            "ref": "app.annos.defs#templateRef"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when this annotation was created"
          },
          "updatedAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when this annotation was last updated"
          }
        }
      }
    }
  }
}
