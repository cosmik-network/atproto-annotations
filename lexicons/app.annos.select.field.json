{
  "lexicon": 1,
  "id": "app.annos.select.field",
  "description": "Record definitions for selection annotation fields (single and multi)",
  "defs": {
    "singleSelect": {
      "type": "record",
      "description": "A record defining a single-select annotation field",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["base", "options"],
        "properties": {
          "base": {
            "type": "ref",
            "ref": "app.annos.defs#annotationFieldBase"
          },
          "options": {
            "type": "array",
            "description": "Available options for selection",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "multiSelect": {
      "type": "record",
      "description": "A record defining a multi-select annotation field",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["base", "options"],
        "properties": {
          "base": {
            "type": "ref",
            "ref": "app.annos.defs#annotationFieldBase"
          },
          "options": {
            "type": "array",
            "description": "Available options for selection",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "main": {
      "type": "record",
      "description": "A record defining a selection annotation field (union placeholder)",
      "key": "tid",
      "record": {
        "type": "union",
        "refs": ["#singleSelect", "#multiSelect"]
      }
    }
  }
}
